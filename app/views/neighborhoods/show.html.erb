<div class="page-header">
  <h3>Neighborhood #<%= @neighborhood.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @neighborhood.name %></dd>

      <dt>City</dt>
      <dd><%= @neighborhood.city %></dd>

      <dt>Venues</dt>
      <% @neighborhood.venues.each do |venue| %>
      <dd><li><%= venue.name %></li></dd>
      <% end %>

      <dt>Favorites</dt>
      <dd><table>
        <tr>
        <th>Venue</th>
        <th>Dish</th>
        <th>User</th>
        </tr>
      <% @neighborhood.favorites.each do |favorite| %>
        <tr>
        <td><%= favorite.venue.name %></td>
        <td><%= favorite.dish.name %></td>
        <td><%= favorite.user.username %></td>
        <% end %>
        </dd></tr></table>
      </dl>

    <div class="btn-group btn-group-justified">
      <a href="/neighborhoods" class="btn btn-primary">
        Back
      </a>
      <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
